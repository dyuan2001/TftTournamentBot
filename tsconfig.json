{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "preserve",
        "outDir": "build",
        "strictFunctionTypes": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, /* Enables experimental support for emitting type metadata for decorators. */
        "baseUrl": ".",
        "paths": {
            "*": ["./types/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}